                    <TextBox HorizontalAlignment="Left" Height="23" Margin="235,219,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="146" VerticalContentAlignment="Center" TabIndex="7"/>
                    <Label Content="Lesson Tag" HorizontalAlignment="Left" Margin="403,188,0,0" VerticalAlignment="Top" Width="208"/>
                    <TextBox HorizontalAlignment="Left" Height="23" Margin="403,219,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="208" VerticalContentAlignment="Center" TabIndex="8"/>
                    <Label Content="Lesson Content" HorizontalAlignment="Left" Margin="10,244,0,0" VerticalAlignment="Top" Width="208"/>
                    <TextBox HorizontalAlignment="Left" Height="89" Margin="10,275,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="371" TabIndex="8"/>
                    <Label Content="Lesson Featured Image" HorizontalAlignment="Left" Margin="403,244,0,0" VerticalAlignment="Top" Width="208"/>
                    <TextBox HorizontalAlignment="Left" Height="23" Margin="403,275,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="208" VerticalContentAlignment="Center" TabIndex="10"/>
                    <TextBlock Text="Lesson Order" TextWrapping="Wrap" HorizontalAlignment="Left" Margin="496,317,0,0" VerticalAlignment="Top" Width="70" Height="20"/>
                    <TextBox HorizontalAlignment="Left" Height="23" Margin="574,314,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="37" VerticalContentAlignment="Center" TabIndex="12" PreviewTextInput="TextBox_PreviewTextInput_1"/>
