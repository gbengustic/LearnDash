        xmlns:talex="http://schemas.talex-soft.com/2010/xaml/presentation"
        mc:Ignorable="d"
        Title="LearnDash" Height="650" Width="650" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
