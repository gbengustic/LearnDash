                    <TextBox HorizontalAlignment="Left" Height="23" Margin="235,399,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="146" VerticalContentAlignment="Center" TabIndex="15"/>
                    <Label Content="Topic Tag" HorizontalAlignment="Left" Margin="403,368,0,0" VerticalAlignment="Top" Width="208"/>
                    <TextBox HorizontalAlignment="Left" Height="23" Margin="403,399,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="208" VerticalContentAlignment="Center" TabIndex="16"/>
