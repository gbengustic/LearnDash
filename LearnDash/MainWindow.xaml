                    <TextBlock Text="Lesson Status (Publish/Draft)" TextWrapping="Wrap" HorizontalAlignment="Left" Margin="403,306,0,0" VerticalAlignment="Top" Width="88" Height="31"/>
                    <ComboBox HorizontalAlignment="Left" VerticalAlignment="Top" Width="82" Margin="403,342,0,0" TabIndex="11" >
